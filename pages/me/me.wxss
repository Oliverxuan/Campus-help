/* pages/me/me.wxss */
.user{
    margin-left: 10rpx;
    display: flex;
    align-items: center;
    border-radius: 15rpx 15rpx 0 0;
    background-color: rgba(240, 240, 240, 0.466);
}
.unuser{
    height: 90rpx;
    background-color: rgb(243, 222, 104);
    margin: 10rpx 20rpx;
    border-radius: 30rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.user-mes{
    margin-left: 30rpx;
    font-size: 30rpx;
    font-weight: 300;
}

.user-bar{
    margin: 20rpx;
    height: 150rpx;
    border-radius: 150rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    background-color: rgb(233, 233, 233);
}
.bar{
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    height: 150rpx;
    width: 150rpx;
}
.bar
view{
    margin-top: 10rpx;
    font-size: 25rpx;
}

.user-data{
    height: 300rpx;
    margin: 20rpx;
    border-radius: 20rpx;
    background-color: #f2eada
}

.user-data-base{
    margin: 20rpx 0rpx 20rpx 20rpx;
    padding-top: 20rpx;
    font-size: 35rpx;
    font-weight: 500;
}

.data{
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.data-item{
    width: 200rpx;
    height: 200rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.num{
    font-size: 40rpx;
}
.data-text{
    margin-top: 20rpx;
    font-size: 30rpx;
    font-weight: 300;
}
.cell{
    margin: 30rpx 0;
}

.footer{
    height: 100rpx;
}